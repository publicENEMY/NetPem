<controls:ChildWindow x:Class="StreamingExperience.Views.PopupToResults"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="300" Height="150" 
           Title="Proceed to results page" HasCloseButton="False">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
        	<Button x:Name="OKButton" Content="OK" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Center" VerticalAlignment="Bottom" />
        </Grid>
        <TextBlock TextWrapping="Wrap" Text="Streaming measurement completed. Press OK to proceed to results page." Margin="8"/>
    </Grid>
</controls:ChildWindow>